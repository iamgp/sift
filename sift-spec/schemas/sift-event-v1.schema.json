{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sift.dev/schemas/sift-event-v1.schema.json",
  "title": "SiftEvent v1",
  "type": "object",
  "required": [
    "schema_version",
    "timestamp",
    "level",
    "service"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "sift.event/v1"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "level": {
      "type": "string",
      "enum": ["trace", "debug", "info", "warn", "error", "fatal"]
    },
    "service": {
      "type": "string",
      "minLength": 1
    },
    "environment": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "outcome": {
      "type": "string",
      "enum": ["success", "error", "timeout", "cancelled"]
    },
    "duration_ms": {
      "type": "number",
      "minimum": 0
    },
    "status_code": {
      "type": "integer",
      "minimum": 100,
      "maximum": 599
    },
    "request": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "method": { "type": "string" },
        "path": { "type": "string" },
        "route": { "type": "string" },
        "remote_addr": { "type": "string" },
        "user_agent": { "type": "string" }
      },
      "additionalProperties": true
    },
    "trace": {
      "type": "object",
      "properties": {
        "trace_id": { "type": "string" },
        "span_id": { "type": "string" },
        "parent_span_id": { "type": "string" }
      },
      "additionalProperties": true
    },
    "error": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" },
        "stack": { "type": "string" },
        "why": { "type": "string" },
        "fix": { "type": "string" },
        "link": { "type": "string", "format": "uri" }
      },
      "required": ["message"],
      "additionalProperties": true
    },
    "attributes": {
      "type": "object",
      "description": "User/application-specific structured context accumulated during request/task execution.",
      "additionalProperties": true
    },
    "sampling": {
      "type": "object",
      "properties": {
        "decision": {
          "type": "string",
          "enum": ["keep", "drop", "forced_keep"]
        },
        "reason": {
          "type": "string"
        },
        "rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        }
      },
      "additionalProperties": true
    },
    "sdk": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "language": { "type": "string" },
        "runtime": { "type": "string" }
      },
      "additionalProperties": true
    },
    "host": {
      "type": "object",
      "properties": {
        "hostname": { "type": "string" },
        "region": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": { "level": { "enum": ["error", "fatal"] } },
        "required": ["level"]
      },
      "then": {
        "properties": {
          "error": { "type": "object" }
        }
      }
    }
  ]
}

